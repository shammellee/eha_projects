style(type='text/css').
	@media only screen and (max-width:600px)
	{
		*[class~=block]{display:block !important;}
		*[class~=mobile]{width:100% !important;height:auto !important;}
		*[class~=mobile-hide]
		{
			 display: none !important;
			 width: 0px !important;
			 height: 0px !important;
			 overflow: hidden !important;
			 position: absolute !important;
			 min-height: 0px !important; /* Gmail */
			 line-height: 0px !important; /* Outlook */
			 font-size: 0px !important; /* Outlook */
		}
		*[class~=mobile-width-25]{width:25px !important;}
		*[class~=mobile-width-75-percent]{width:70% !important;}
		*[class~=mobile-width-auto]{width:auto !important;}
		*[class~=mobile-padding-top-15]{padding-top:15px !important;}
		*[class~=mobile-padding-top-25]{padding-top:25px !important;}
		*[class~=mobile-padding-right-25]{padding-right:25px !important;}
		*[class~=mobile-padding-bottom-10]{padding-bottom:10px !important;}
		*[class~=mobile-margin-auto]{margin:auto !important;}
		*[class~=mobile-text-align-center]{text-align:center !important;}
		*[class~=mobile-border-none]{border:none !important;}
		*[class~=mobile-font-size-1-5-em]{font-size:1.5em !important;}
		*[class~=mobile-line-height-1-2]{line-height:1.2 !important;}
	}