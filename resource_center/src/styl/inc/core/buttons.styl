@require 'mixins'
@require 'colors'
@require 'text'

.ctaBase
	@extend .textArial
	@extend .textWhite
	background-color COLOR_NAVY
	border           none
	border-radius    4px
	display          inline-block
	emSize           1.1
	letter-spacing   -.021em
	padding          4px 11px

.cta
	@extend .textBold
	@extend .ctaBase

.submit
	@extend .ctaBase
	letter-spacing .01em
	padding        6px 8px
